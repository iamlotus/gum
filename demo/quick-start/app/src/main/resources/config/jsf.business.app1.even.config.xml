<?xml version="1.0" encoding="UTF-8"?>
<!--for app1.even-->
<businessTemplate-config>

    <!--业务，必须有且只有一个 -->
    <businessTemplate class="com.jinlo.jsf.samples.quickstart.app.App1Business"/>

    <products>
        <!--产品，可以有0-N个 -->
        <systemTemplate class="com.jinlo.jsf.samples.quickstart.product1.MyProduct1"/>
        <systemTemplate class="com.jinlo.jsf.samples.quickstart.product2.MyProduct2"/>
    </products>

    <!--自定义扩展点实现的顺序，如果某个扩展点有超过一个实现，可以不指定顺序(默认随机)，但如果指定了顺序，必须指定所有实现的顺序
     不允许出现仅仅指定若干实现的顺序。这里所有的实现必须位于其上指定的业务/产品中。-->
    <extension-implementation-order>
        <extension code="com.jinlo.jsf.samples.quickstart.domain.delivery.domainFunction.receive.extension.ReceiveMethodSelectorExtension">
            <implementation template="com.jinlo.jsf.samples.quickstart.app.facades.App1DeliveryFacade" />
            <implementation template="com.jinlo.jsf.samples.quickstart.product2.facades.MyProduct2DeliveryFacade" />
            <implementation template="com.jinlo.jsf.samples.quickstart.product2.facades.MyProduct1DeliveryFacade" />
        </extension>
    </extension-implementation-order>

</businessTemplate-config>